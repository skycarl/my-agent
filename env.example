# Authentication
X_TOKEN=12345678910

# OpenAI Configuration
# Set your OpenAI API key here (leave empty if not using OpenAI services)
OPENAI_API_KEY= 
# Set the OpenAI model to use (defaults to gpt-4o-mini)
OPENAI_MODEL=gpt-4o-mini

# Telegram Bot Configuration
# Get your bot token from @BotFather on Telegram
TELEGRAM_BOT_TOKEN=
# URL of the FastAPI app (for bot to communicate with API)
# For local development (outside Docker):
APP_URL=http://localhost:8000
# For Docker Compose deployment:
# APP_URL=http://app:8000

# Your Telegram user ID (only this user can use the bot)
# To find your user ID, message @userinfobot on Telegram
# Or use @raw_data_bot and look for "from":{"id":YOUR_USER_ID}
AUTHORIZED_USER_ID=
# Maximum number of messages to keep in conversation history (defaults to 10)
MAX_CONVERSATION_HISTORY=10

# MCP Configuration
# URL of the MCP server
# For local development (outside Docker):
MCP_SERVER_URL=http://localhost:8001/mcp
# For Docker Compose deployment:
# MCP_SERVER_URL=http://mcp-server:8001/mcp
# Enable or disable MCP tools integration (defaults to true)
ENABLE_MCP_TOOLS=true

# Garden Database Configuration
# Path to the garden database JSON file
# For local development (outside Docker):
GARDEN_DB_PATH=garden_db.json
# For Docker Compose deployment:
# GARDEN_DB_PATH=/app/workspace/garden_db.json

# Logging Configuration
# Set the logging level (DEBUG, INFO, WARNING, ERROR, CRITICAL)
# Use DEBUG for development, INFO for production
LOG_LEVEL=INFO