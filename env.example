# Authentication
X_TOKEN=12345678910

# OpenAI Configuration
# Set your OpenAI API key here (leave empty if not using OpenAI services)
OPENAI_API_KEY= 
# Set the OpenAI model to use (defaults to gpt-4o-mini)
OPENAI_MODEL=gpt-4o-mini
# OpenAI API timeout in seconds (defaults to 60)
OPENAI_TIMEOUT=60
# Maximum number of retries for OpenAI API calls (defaults to 3)
OPENAI_MAX_RETRIES=3

# Telegram Bot Configuration
# Get your bot token from @BotFather on Telegram
TELEGRAM_BOT_TOKEN=
# URL of the FastAPI app (for bot to communicate with API)
# For local development (outside Docker):
APP_URL=http://localhost:8000
# For Docker Compose deployment:
# APP_URL=http://app:8000

# Your Telegram user ID (only this user can use the bot)
# To find your user ID, message @userinfobot on Telegram
# Or use @raw_data_bot and look for "from":{"id":YOUR_USER_ID}
AUTHORIZED_USER_ID=
# Maximum number of messages to keep in conversation history (defaults to 10)
MAX_CONVERSATION_HISTORY=10

# MCP Configuration
# URL of the MCP server
# For local development (outside Docker):
MCP_SERVER_URL=http://localhost:8001/mcp
# For Docker Compose deployment:
# MCP_SERVER_URL=http://mcp-server:8001/mcp
# Enable or disable MCP tools integration (defaults to true)
ENABLE_MCP_TOOLS=true

# Garden Database Configuration
# Path to the garden database JSON file
# For local development (outside Docker):
GARDEN_DB_PATH=storage/garden_db.json
# For Docker Compose deployment:
# GARDEN_DB_PATH=/app/workspace/storage/garden_db.json

# Logging Configuration
# Set the logging level (DEBUG, INFO, WARNING, ERROR, CRITICAL)
# Use DEBUG for development, INFO for production
LOG_LEVEL=INFO

# Email Sink Configuration
# Enable email sink monitoring service (defaults to false)
EMAIL_SINK_ENABLED=false
# Gmail address for email monitoring (leave empty if not using email sink)
EMAIL_ADDRESS=
# Gmail app password for email monitoring (generate from Google account settings)
# Visit: https://myaccount.google.com/apppasswords
EMAIL_PASSWORD=
# IMAP server for email monitoring (defaults to imap.gmail.com for Gmail)
EMAIL_IMAP_SERVER=imap.gmail.com
# Email polling interval in seconds (defaults to 60)
EMAIL_POLL_INTERVAL=60
# Comma-separated list of sender patterns to monitor (supports substrings)
# Examples: "alerts@" or "alerts@transit.gov,@weatherservice.gov,notifications@"
EMAIL_SENDER_PATTERNS=alerts@
# Storage directory path for persistent data
# For local development (outside Docker):
STORAGE_PATH=storage
# For Docker Compose deployment:
# STORAGE_PATH=/app/workspace/storage

# Task Scheduler Configuration
# Enable or disable the task scheduler service (defaults to true)
SCHEDULER_ENABLED=true
# Timezone for scheduled tasks (defaults to America/Los_Angeles)
# Examples: "UTC", "America/New_York", "Europe/London", "America/Los_Angeles"
SCHEDULER_TIMEZONE=America/Los_Angeles
# Interval in seconds to check for task config changes (defaults to 30)
TASK_CONFIG_RELOAD_INTERVAL=30
# Note: Task config and results files are automatically located in the storage directory:
#   - Task config: {STORAGE_PATH}/scheduled_tasks.json
#   - Task results: {STORAGE_PATH}/task_results.json